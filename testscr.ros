#!/bin/sh
#|-*- mode:lisp -*-|#
#|
exec ros -Q -- $0 "$@"
|#

(ql:quickload :uiop)
(ql:quickload :fiveam)

(defun test (sys &optional (tsys sys))
  (handler-case
      (progn
        (ql:quickload tsys)
        (fiveam:run sys))
    (serious-condition (c)
      (describe c)
      (uiop:quit 2))))

(defun main (&rest argv)
  (declare (ignorable argv))
  (uiop:quit (if (every #'fiveam::TEST-PASSED-P
                        (test :lisp-namespace :lisp-namespace/test))
               0 1)))
